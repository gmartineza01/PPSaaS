@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Login.cshtml";
}




<div class="container">
 <form role="form" action="@Url.Action("iniciarSesion", "Login")" class="form-horizontal col-sm-4 @*col-sm-offset-4*@" method="post">
     
    @if (ViewBag.msg != null)
    {
    <div class="alert alert-danger alert-dismissable fade in" id="login-alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @ViewBag.msg.ToString()
    </div>
    }


  <div class="form-group">
    <label for="usr" class="control-label col-sm-3 color-2">Usuario</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" id="usuario" name="usuario" placeholder="">
    </div>
  </div>


  <div class="form-group">
    <label for="psswd" class="control-label col-sm-3 color-5">Contraseña</label>
    <div class="col-sm-9">
        <input type="password" class="form-control" id="password" name="password" placeholder="">
    </div>
  </div>


  <button type="submit" class="btn btn-default pull-right">Acceder</button>
</form>
<div class="pull-left col-sm-6 color-1">Bienvenido, utiliza tus credenciales para acceder a la plataforma. Si has olvidado tu usuario o contraseña, haz click <b><a href="@Url.Action("RecuperarCredenciales")">aquí</a></b> 
   </div>
 
</div>
